{
    "name": "WhatsApp",
    "version": "3.1.1",
    "description": "WhatsApp desktop client for Windows and Linux",
    "main": "dist-js/app.js",
    "author": "Cyrus Frost <cyrus.frost@hotmail.com>",
    "license": "MIT",
    "private": true,
    "repository": "cyfrost/whatsapp-desktop",
    "scripts": {
        "start": "tsc && electron .",
        "prettify": "yarn prettier --write 'src/**/*.ts'",
        "pack": "tsc && electron-builder --dir",
        "dist": "tsc && electron-builder --linux --windows --publish never",
        "build": "tsc && electron-builder --windows --linux",
        "release": "tsc && electron-builder --windows --linux --publish always",
        "compile": "tsc"
    },
    "dependencies": {
        "@types/node": "14.14.21",
        "auto-launch": "^5.0.5",
        "darkreader": "^4.9.26",
        "electron-context-menu": "^2.4.0",
        "electron-debug": "^3.2.0",
        "electron-dl": "^3.0.2",
        "electron-log": "^4.3.1",
        "electron-settings": "^4.0.2",
        "electron-store": "6.0.1",
        "electron-updater": "^4.3.5",
        "electron-util": "^0.14.2",
        "electron-window-state": "^5.0.3",
        "element-ready": "^5.0.0",
        "eslint": "^7.17.0",
        "gettext-parser": "^4.0.4",
        "is-online": "^9.0.0",
        "node-gettext": "^3.0.0",
        "node-notifier": "^9.0.0",
        "process-nextick-args": "^2.0.1",
        "request": "^2.88.2",
        "util-deprecate": "^1.0.2"
    },
    "devDependencies": {
        "@sindresorhus/tsconfig": "^0.8.0",
        "@types/electron-settings": "^3.1.2",
        "@types/electron-store": "^3.2.0",
        "@types/semver": "^7.3.4",
        "@typescript-eslint/eslint-plugin": "^4.13.0",
        "electron": "^11.5.0",
        "electron-builder": "^22.9.1",
        "electron-installer-flatpak": "^0.8.0",
        "electron-packager": "^15.2.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1",
        "typescript": "4.1.3"
    },
    "prettier": {
        "bracketSpacing": true,
        "singleQuote": true,
        "semi": true,
        "trailingComma": "none",
        "useTabs": false
      },
    "build": {
        "artifactName": "${name}-${version}-${os}.${ext}",
        "files": [
            "**/*"
        ],
        "appId": "WhatsApp",
        "linux": {
            "target": [
                "deb",
                "pacman",
                "AppImage",
                "tar.gz",
                "rpm"
            ],
            "category": "Network;Office;Internet;Social"
        },
        "win": {
            "verifyUpdateCodeSignature": false,
            "target": "nsis"
        }
    }
}
