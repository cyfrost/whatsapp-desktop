{
    "name": "WhatsApp",
    "version": "2.5.0",
    "description": "WhatsApp desktop client for Windows and Linux",
    "main": "dist-js/app.js",
    "author": "Cyrus Frost <cyrus.frost@hotmail.com>",
    "license": "MIT",
    "private": true,
    "repository": "cyfrost/whatsapp-desktop",
    "scripts": {
        "start": "tsc && electron ."
    },
    "dependencies": {
        "@types/node": "12.12.21",
        "is-online": "^8.2.1",
        "process-nextick-args": "^2.0.1",
        "util-deprecate": "^1.0.2",
        "auto-launch": "^5.0.5",
        "electron-window-state": "^5.0.3",
        "gettext-parser": "^4.0.2",
        "node-gettext": "^2.0.0",
        "node-notifier": "^6.0.0",
        "request": "^2.88.2",
        "electron-context-menu": "^0.16.0",
        "electron-debug": "^3.0.1",
        "electron-dl": "^3.0.0",
        "electron-log": "^4.0.7",
        "electron-settings": "^3.2.0",
        "electron-store": "5.1.1",
        "electron-updater": "^4.2.0",
        "electron-util": "^0.14.0",
        "element-ready": "^4.1.1",
        "eslint": "^6.8.0"
    },
    "devDependencies": {
        "electron": "^8.1.0",
        "electron-builder": "^22.4.0",
        "electron-installer-flatpak": "^0.8.0",
        "electron-packager": "^14.2.1",
        "@sindresorhus/tsconfig": "^0.7.0",
        "@types/electron-settings": "^3.1.1",
        "@types/electron-store": "^3.2.0",
        "@types/semver": "^7.1.0",
        "@typescript-eslint/eslint-plugin": "^2.22.0",
        "npm-run-all": "^4.1.5",
        "typescript": "3.8.3"
    },
    "build": {
        "artifactName": "${name}-${version}-${os}.${ext}",
        "files": [
            "**/*"
        ],
        "appId": "WhatsApp",
        "linux": {
            "target": [
                "deb",
                "pacman",
                "AppImage",
                "tar.gz"
            ],
            "category": "Network;Office;Internet;Social"
        },
        "win": {
            "verifyUpdateCodeSignature": false,
            "target": "nsis"
        }
    }
}
