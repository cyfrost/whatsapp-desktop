{
    "name": "WhatsApp",
    "author": {
        "name": "Cyrus Frost",
        "email": "cyrus.frost@hotmail.com",
        "url": "https://github.com/cyfrost/whatsapp-desktop"
    },
    "license": "MIT",
    "repository": "https://github.com/cyfrost/Whatsapp-Desktop.git",
    "description": "WhatsApp Desktop client for Windows and Linux built with Electron.js",
    "main": "src/main.js",
    "postinstall": "electron-builder install-app-deps",
    "devDependencies": {
        "electron": "^7.0.1",
        "electron-builder": "^22.1.0",
        "electron-installer-flatpak": "^0.8.0",
        "electron-packager": "^14.1.0"
    },
    "build": {
        "appId": "com.cyfrost.WhatsApp",
        "directories": {
            "app": "src"
        },
        "win": {
            "target": "nsis",
            "icon": "build/icon.png"
        },
        "linux": {
            "target": [
                "deb",
                "rpm",
                "AppImage",
                "pacman"
            ],
            "category": "Internet",
            "icon": "build/icon.png"
        }
    },
    "dependencies": {
        "is-online": "^8.2.0"
    }
}
