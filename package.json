{
    "name": "WhatsApp",
    "version": "3.0.0",
    "description": "WhatsApp desktop client for Windows and Linux",
    "main": "dist-js/app.js",
    "author": "Cyrus Frost <cyrus.frost@hotmail.com>",
    "license": "MIT",
    "private": true,
    "repository": "cyfrost/whatsapp-desktop",
    "scripts": {
        "start": "tsc && electron .",
        "prettify": "yarn prettier --write 'src/**/*.ts'",
        "pack": "tsc && electron-builder --dir",
        "dist": "tsc && electron-builder --linux --windows --publish never",
        "build": "tsc && electron-builder --windows --linux",
        "release": "tsc && electron-builder --windows --linux --publish always",
        "compile": "tsc"
    },
    "dependencies": {
        "@types/node": "12.12.21",
        "auto-launch": "^5.0.5",
        "darkreader": "^4.9.11",
        "electron-context-menu": "^2.0.1",
        "electron-debug": "^3.1.0",
        "electron-dl": "^3.0.1",
        "electron-log": "^4.2.2",
        "electron-settings": "^4.0.2",
        "electron-store": "5.2.0",
        "electron-updater": "^4.3.1",
        "electron-util": "^0.14.2",
        "electron-window-state": "^5.0.3",
        "element-ready": "^4.1.1",
        "eslint": "^7.3.1",
        "gettext-parser": "^4.0.3",
        "is-online": "^8.4.0",
        "node-gettext": "^3.0.0",
        "node-notifier": "^8.0.1",
        "process-nextick-args": "^2.0.1",
        "request": "^2.88.2",
        "util-deprecate": "^1.0.2"
    },
    "devDependencies": {
        "@sindresorhus/tsconfig": "^0.7.0",
        "@types/electron-settings": "^3.1.1",
        "@types/electron-store": "^3.2.0",
        "@types/semver": "^7.3.1",
        "@typescript-eslint/eslint-plugin": "^3.4.0",
        "electron": "^9.0.5",
        "electron-builder": "^22.7.0",
        "electron-installer-flatpak": "^0.8.0",
        "electron-packager": "^15.0.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.5",
        "typescript": "3.9.5"
    },
    "prettier": {
        "bracketSpacing": true,
        "singleQuote": true,
        "semi": true,
        "trailingComma": "none",
        "useTabs": false
      },
    "build": {
        "artifactName": "${name}-${version}-${os}.${ext}",
        "files": [
            "**/*"
        ],
        "appId": "WhatsApp",
        "linux": {
            "target": [
                "deb",
                "pacman",
                "AppImage",
                "tar.gz",
                "rpm"
            ],
            "category": "Network;Office;Internet;Social"
        },
        "win": {
            "verifyUpdateCodeSignature": false,
            "target": "nsis"
        }
    }
}
